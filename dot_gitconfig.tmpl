[branch]
    sort = -committerdate
[color]
    ui = auto
    diff = true
    branch = true
[column]
    ui = auto
[core]
    excludesfile = ~/.gitignore
	fsmonitor = true
	untrackedCache = true
    # pager = delta
{{ if eq .chezmoi.os "darwin" -}}
[credential "https://github.com"]
	helper = !/opt/homebrew/bin/gh auth git-credential
[credential "https://gist.github.com"]
	helper = !/opt/homebrew/bin/gh auth git-credential
{{ else if eq .chezmoi.os "linux" -}}
[credential "https://github.com"]
	helper = !/usr/bin/gh auth git-credential
[credential "https://gist.github.com"]
	helper = !/usr/bin/gh auth git-credential
{{ end -}}
[delta]
    navigate = true
    light = true
[diff]
    algorithm = histogram
    colorMoved = plain
	mnemonicPrefix = true
	renames = true
[difftool]
	prompt = false
[fetch]
	prune = true
	pruneTags = true
	all = true
[filter "lfs"]
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
[help]
	autocorrect = prompt
[init]
	defaultBranch = main
[interactive]
    # diffFilter = delta --color-only
[merge]
    conflictstyle = zdiff3
[pull]
	ff = only
	rebase = true
[push]
	default = simple
	autoSetupRemote = true
	followTags = true
[rebase]
    state = true
    updateRefs = true
	autoStash = true
	autoSquash = true
[rerere]
	enabled = true
	autoupdate = true
[tag]
	sort = version:refname

[alias]
    st = status -sb
    co = checkout
    logg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
    log-today = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit  --after=yesterday
    head = log -n1
    staged = diff --staged
    unstage = reset HEAD --
    last = log -1 HEAD
    br = branch
    lost = !"git fsck | awk '/dangling commit/ {print $3}' | git show --format='SHA1: %C(yellow)%h%Creset %f' --stdin | awk '/SHA1/ {sub(\"SHA1: \", \"\"); print}'"
    df = diff -b --color-words
    blog = !bash -c 'git logg --ancestry-path $(git merge-base --octopus master "$1")~1.."$1" "${@: 3}" ' - 
    bdiff = !bash -c 'git diff $(git merge-base --octopus "$1" "$2").."$2" ' -

[include]
    path = ~/.gitconfig_local
